{% extends 'baseBack.html.twig' %}

{% block title %}Paiements index{% endblock %}

{% block body %}
    <h4 class="fw-bold">
        Paiements index
    </h4>

    <a type="button" class="btn btn-primary mb-3" href="{{ path('app_paiements_new') }}">Create new</a>

    <div class="card">
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        {# <th>Date</th> #}
                        <th>Mode</th>
                        <th>Montant</th>
                        {# <th>Archivee</th> #}
                        <th>Client</th>
                        <th>Commande</th>
                    </tr>
                </thead>
                <tbody>
                    {% for paiement in paiements %}
                        <tr>
                            <td>{{ paiement.id }}</td>
                            {# <td>{{ paiement.date ? paiement.date|date('Y-m-d') : '' }}</td> #}
                            <td>{{ paiement.mode }}</td>
                            <td>{{ paiement.montant }}</td>
                            <td>{{ paiement.idClient }}</td>
                            <td>{{ paiement.idCommande }}</td>
                            {# <td>{{ paiement.archivee ? 'Yes' : 'No' }}</td> #}
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="{{ path('app_paiements_show', {'id': paiement.id}) }}">Show</a>
                                        <a class="dropdown-item" href="{{ path('app_paiements_edit', {'id': paiement.id}) }}">Edit</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">No records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
