<div class="container">
        <h1>Créer une nouvelle location</h1>

        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.adresse, 'Adresse') }}
            {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.idclient, 'ID Client') }}
            {{ form_widget(form.idclient, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.idvehicule, 'ID Véhicule') }}
            {{ form_widget(form.idvehicule, {'attr': {'class': 'form-control'}}) }}
        </div>

        <button type="submit" class="btn btn-primary">Enregistrer</button>
        {{ form_end(form) }}
    </div>

